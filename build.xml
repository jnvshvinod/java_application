<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!--Change the project path -->
<project name="JavaApp" default="war" basedir=".">

       <path id="compile.classpath">
              <fileset dir="JavaApp/WEB-INF/lib">
                     <include name="*.jar"/>
              </fileset>
       </path>
       
       <target name="init" depends="clean">
              <mkdir dir="build/classes"/>
              <mkdir dir="dist" />
       </target>
       
       <target name="compile" depends="init" >
              <javac destdir="build/classes" includeantruntime="false" debug="true" srcdir="src">
                     <classpath refid="compile.classpath"/>
              </javac>
       </target>
       
      <target name="war" depends="compile">
              <war destfile="./dist/JavaApp.war" webxml="./WebContent/WEB-INF/web.xml">
                     <fileset dir="WebContent"/>
                     <lib dir="WebContent/WEB-INF/lib"/>
                     <classes dir="build/classes"/>                  
              </war>
       </target>     
       <target name="clean">
              <delete dir="build" />
       		  <delete dir="dist" />
       </target>
	
</project>
